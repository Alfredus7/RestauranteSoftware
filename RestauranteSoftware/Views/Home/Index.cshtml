@{
    ViewData["Title"] = "Panel de Gestión - Restaurante Rápido";
}

<div class="container mt-3">
    <!-- Carrusel de imágenes -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <!-- Indicadores -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!-- Contenido del carrusel -->
        <div class="carousel-inner" style="height: 800px;">
            <!-- Altura especificada -->
            <div class="carousel-item active">
                <img src="https://www.franquiciasdecomida.com.mx/storage/2014/02/negocio-de-comida-rapida.jpg"
                     class="d-block w-100"
                     alt="Restaurante de comida rápida 1"
                     style="object-fit: cover; height: 100%;">
            </div>
            <div class="carousel-item">
                <img src="https://www.clarin.com/2022/08/17/QoyfI4ouM_2000x1500__1.jpg"
                     class="d-block w-100"
                     alt="Restaurante de comida rápida 2"
                     style="object-fit: cover; height: 100%;">
            </div>
            <div class="carousel-item">
                <img src="https://www.semana.com/resizer/v2/UQV7P4H4JRAEZDP5HK3EKO6LKM.jpg?auth=a273dfc603a9465f67a617197d8a4732e77b00394133f392c99d2f9607958c02&smart=true&quality=75&width=1280&fitfill=false"
                     class="d-block w-100"
                     alt="Restaurante de comida rápida 3"
                     style="object-fit: cover; height: 100%;">
            </div>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <!-- Descripción del restaurante -->
    <div class="mt-5 text-center">
        <h1 class="display-4 text-primary">Restaurante SpeedFood</h1>
        <p class="lead">Somos especialistas en comida rápida, ofreciendo platos deliciosos y de calidad para nuestros clientes. Aquí encontrarás un ambiente dinámico y organizado, donde la rapidez y eficiencia son nuestra prioridad.</p>
        <p>Nuestro equipo trabaja para garantizar que cada pedido llegue a tiempo y cumpla con los más altos estándares de sabor y frescura.</p>
    </div>

    <!-- Ubicación -->
    <div class="mt-5 text-center">
        <h2>Nuestra Ubicación</h2>
        <p class="lead">Encuéntranos en:</p>
        <p><strong>Avenida Principal 123, Ciudad de Ejemplo</strong></p>
        <p>Horario de Atención: Lunes a Domingo, 10:00 AM - 10:00 PM</p>
    </div>
</div>

