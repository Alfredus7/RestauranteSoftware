@model RestauranteSoftware.viewModels.PedidosViews

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<p class="text-end mb-3">
    <a asp-action="Create" class="btn">Crear Nuevo Pedido</a>
</p>

@foreach (var item in Model.pedidos)
{
    <div class="bordered-div">
        <div class="container mt-5">
           

            <hr />

            <table class="table table-striped">
                <div class="Theader">
                    <h2 class="text-center">Detalles de Compra</h2>
                   
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Numero Pedido:@item.Id </h5>
                        </div>
                       
                        <div class="col-md-3">
                            <h5>Estado: @item.EstadoPedido.Nombre</h5>
                        </div>
                        <div class="col-md-3 ">
                            <h5>Fecha: @item.Fecha.ToString("dd/MM/yyyy")</h5>
                        </div>

                        <div class="col-md-3 text-end">
                            <a class="btn btn-primary" asp-route-id="@item.Id" asp-action="DescargarPDF">Descargar PDF</a>
                        </div>
                       
                    </div>
                </div>
                <thead>
                    <tr>
                    
                        <th>Comida</th>
                        <th>Cantidad</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model.detallesPedidos)
                    {
                        @if (items.PedidoId == item.Id)
                        {
                            <tr>
                       
                                <td>@items.Comida.Nombre</td>
                                <td>@items.Cantidad</td>
                                
                            </tr>
                        }

                    }
                   
                   
                </tbody>
               
            </table>
            <div class="TFooter"> <h3>Precio Total: @item.TotalPedido</h3>   </div>
      
           
        </div>
    </div>
}
