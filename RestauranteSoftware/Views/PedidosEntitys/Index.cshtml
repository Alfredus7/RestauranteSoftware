@model RestauranteSoftware.viewModels.PedidosViews

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Pedido</a>
</p>

<div class="row">
    @foreach (var item in Model.pedidos)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Pedido Nro @item.Id</h5>
                    <p class="card-text">
                        <strong>Estado:</strong> @item.EstadoPedido.Nombre <br />
                        <strong>Fecha:</strong> @item.Fecha.ToString("dd/MM/yyyy") <br />
                        <strong>Total:</strong> @item.TotalPedido
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#detailsModal-@item.Id">
                            Ver Comidas
                        </button>
                        <a class="btn btn-primary btn-sm" asp-action="DescargarPDF" asp-route-fecha="@item.Fecha.ToString("yyyy-MM-dd")">
                            Descargar PDF
                        </a>

                    </div>
                </div>
            </div>
        </div>







        <!-- Modal para los detalles -->
        <div class="modal fade" id="detailsModal-@item.Id" tabindex="-1" aria-labelledby="detailsModalLabel-@item.Id" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <h5 class="modal-title" id="detailsModalLabel-@item.Id">Detalles de Comidas - Pedido #@item.Id</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Tabla de detalles de comidas -->
                        <table class="table border-0">
                            <thead>
                                <tr>
                                    <th>Comida</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var items in Model.detallesPedidos)
                                {
                                    @if (items.PedidoId == item.Id)
                                    {
                                        <tr>
                                            <td>@items.Comida.Nombre</td>
                                            <td>@items.Cantidad</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>






    }
</div>


