@model RestauranteSoftware.viewModels.PedidosReporte

@{
    ViewData["Title"] = "Details";
    
}
<style>
    body {
        background-color: white !important;
        background-image: none !important;
    }
</style>



<h1>reporte</h1>


<div class="bordered-div">
    <div class="container mt-5">


        <hr />

        <table class="table table-striped">
            <div class="Theader">
                <h2 class="text-center">Detalles de Compra</h2>

                <div class="row">
                    <div class="col-md-3">
                        <h5>Numero Pedido:@Model.pedidos.Id </h5>
                    </div>

                    <div class="col-md-3">
                        <h5>Estado: @Model.pedidos.EstadoPedido.Nombre  </h5>
                    </div>
                    <div class="col-md-3 ">
                        <h5>Fecha: @Model.pedidos.Fecha</h5>
                    </div>

                </div>
            </div>
            <thead>
                <tr>

                    <th>Comida</th>
                    <th>Cantidad</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.detallesPedidos)
                {
                    @if (items.PedidoId == Model.pedidos.Id)
                    {
                        <tr>

                            <td>@items.Comida.Nombre</td>
                            <td>@items.Cantidad</td>

                        </tr>
                    }

                }


            </tbody>

        </table>
        <div class="TFooter"> <h3>Precio Total: @Model.pedidos.TotalPedido</h3>   </div>


    </div>
</div>